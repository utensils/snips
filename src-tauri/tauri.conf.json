{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "snips",
  "version": "0.1.1",
  "identifier": "io.utensils.snips",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:snips.db"]
    }
  },
  "app": {
    "windows": [
      {
        "title": "Snips",
        "width": 600,
        "height": 400,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "center": true,
        "label": "search"
      },
      {
        "title": "Quick Add Snippet",
        "width": 650,
        "height": 700,
        "visible": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "center": true,
        "label": "quick-add"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application permissions",
          "windows": ["*"],
          "permissions": [
            "core:window:allow-close",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-center",
            "core:window:allow-set-focus",
            "core:window:allow-unminimize",
            "core:window:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:event:allow-emit-to",
            "core:event:default"
          ]
        }
      ]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  }
}
